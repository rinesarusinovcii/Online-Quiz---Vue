<script setup>
import { ref, onMounted } from 'vue'
import QuizCard from '@/components/ui/QuizCard.vue'
import TheMainLayout from '@/components/ui/TheMainLayout.vue'
import QuizSpinner from '@/components/ui/QuizSpinner.vue'
import QuestionService from '@/service/questionService.js'

const isLoading = ref(false)
const questions = ref([])

const typeLabels = {
  MULTIPLE_CHOICE: 'Multiple Choice',
  TRUE_FALSE: 'True/False',
  SHORT_ANSWER: 'Short Answer',
}

const withLoading = async (callback) => {
  isLoading.value = true
  try {
    await callback()
  } catch (e) {
    console.error("Gabim gjatë ngarkimit:", e)
  } finally {
    isLoading.value = false
  }
}

const loadQuestions = async () => {
  await withLoading(async () => {
    questions.value = await QuestionService.getAllQuestions()
  })
}

onMounted(loadQuestions)
</script>

<template>
  <the-main-layout>
    <template #content>
      <div class="col-lg-10 mx-auto">
        <quiz-card>
          <template #header>
            <h2 class="text-center">Question List</h2>
          </template>

          <div class="p-3">
            <div class="text-center" v-if="isLoading">
              <quiz-spinner :is-loading="isLoading" />
            </div>

            <div v-else-if="questions.length">
              <div
                  v-for="(question, index) in questions"
                  :key="index"
                  class="mb-4 border-bottom pb-3"
              >
                <h5 class="fw-bold">Question {{ index + 1 }}:</h5>
                <p>{{ question.text }}</p>

                <h6 class="fw-bold">Type:</h6>
                <p>{{ typeLabels[question.questionType] || 'Unknown' }}</p>

                <h6 class="fw-bold">Points:</h6>
                <p>{{ question.points }}</p>

                <h6 class="fw-bold">Quiz ID:</h6>
                <p>{{ question.quizId }}</p>

                <div v-if="question.choices && question.choices.length">
                  <h6 class="fw-bold">Choices:</h6>
                  <ul class="list-group">
                    <li
                        v-for="(choice, cIndex) in question.choices"
                        :key="cIndex"
                        class="list-group-item"
                    >
                      {{ choice }}
                    </li>
                  </ul>
                </div>
              </div>
            </div>

            <div v-else class="text-center text-muted">
              <p>No questions available.</p>
            </div>
          </div>
        </quiz-card>
      </div>
    </template>
  </the-main-layout>
</template>

<style scoped>
/* stilizime të lehta */
.border-bottom {
  border-bottom: 1px solid #dee2e6;
}
</style>
